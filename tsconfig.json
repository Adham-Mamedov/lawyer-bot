{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2017",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["src/*"],
      "@datasets/*": ["src/datasets/*"]
    },
    "lib": ["esNext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}
